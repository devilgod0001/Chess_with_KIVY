<Cancan>:
    MainGame:
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size_hint: None, None
        size: root.width, root.width
        canvas.before:
            PushMatrix
            Color:
                rgba: rgb_from_hex(Board_color) #BACKGROUND_BOX_COLOR2E2E3A
            Translate:
                xy: self.x, self.y-20
            RoundedRectangle:
                size: self.width, self.height+20
                segments:40
            PopMatrix
    Horse:
        name: "HorseL"
        pos: DefaultPos[self.name]

