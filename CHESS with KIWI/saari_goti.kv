<Clickable>:
    size_hint: None, None
    size: ((b-(14+8))/8)-10, ((b-(14+8))/8)-10 #root.width , root.height
    pos: 0, (h-b)/2

<Horse>:
    canvas:
        PushMatrix
        Translate:
            xy: -self.x, -self.y #-8.75, -self.y
        # Color:
        #     rgb: rgb_from_hex("#000000")#does nothing
        Rectangle:
            pos: self.pos[0], self.pos[1]
            size: self.width, self.height
            source: "Assets\Images\Horse.png"
        PopMatrix

