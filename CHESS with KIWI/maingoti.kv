#:import rgba_from_hex kivy.utils.get_color_from_hex

<King_w@Clickable_char>:
    canvas:
        Color:  #to prevent images of chess pieces not to adopt color from background
            rgba: rgba_from_hex('#ffffff')
        # RoundedRectangle:
        #     pos: self.pos[0]+(7/2), self.pos[1]+(7/2)
        #     size: per_image_side-7, per_image_side-7
        #     segments: 10
        #     radius: [3]
        # PopMatrix

        Rectangle:
            pos: self.pos
            size: per_image_side, per_image_side
            source: "Assets\Images\White\King_w.png"

